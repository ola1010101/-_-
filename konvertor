#include<iostream >

int main()
{
	setlocale(LC_ALL, "ru");
	double a, j, доллар, евро, юань, фарит, йена, комисия ;
	доллар = 99.42;
	евро = 106.3;
	юань = 13.6;
	фарит = 37;
	йена = 0.662;

	std::cout << "количество рублей ";
	std::cin >> a;
    комисия = a / 100 * 5;
	a = a - комисия;
	std::cout << "выберите одну из валют указав только её номер: 1.доллар, 2.евро, 3.юань, 4.фарит, 5.йена \n";
	std::cin >> j;
	if (j == 1) 
	{
		std::cout << "получится купить " << a / доллар << " долларов \n";
	}
	else if (j == 2)
	{
		std::cout << "получится купить " << a / евро << " евро\n";
	}
	else if (j == 3) 
	{
	    std::cout << "получится купить " << a / юань << " юань\n";
	}
    else if (j == 4)
    {
	    std::cout << "получится купить " << a / фарит << " фарит\n";
	}
	else if (j == 5)
	{
		std::cout << "получится купить " << a / йена << " йена\n";
	}

	 std::cout << "сумма комисии равна  " << комисия << " рублей\n";
	 std::cout << "повторить услугу? ";
	return 0;
}
